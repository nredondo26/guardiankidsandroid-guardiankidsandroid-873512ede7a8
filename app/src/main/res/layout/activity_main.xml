<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.appguardian.peerfy.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Numero telÃ©fono del suscriptor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_numbrer_indicativo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:padding="9dp"
                android:hint="+953"
                android:background="@drawable/style_editext"
                android:layout_weight=".22"
                />

            <EditText
                android:id="@+id/txt_numbrer_tele"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="9dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_editext"
                android:hint="698542178"
                android:layout_weight=".78"

                android:inputType="phone" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/style_buttons"
            android:onClick="ValidarDatos"
            android:padding="18dp"
            android:text="Registrar"
            android:textColor="@color/colorBlanco" />

    </LinearLayout>

</LinearLayout>
